/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    
    And(a=a, b=b, out=outa);
    And(b=b, c=c, out=outb);
    And(c=c, a=a, out=outc);
    Or(a=outa, b=outb, out=oroutab);
    Or(a=outc, b=oroutab, out=carry);
    
    Not(in=a, out=nota);
    Not(in=b, out=notb);
    Not(in=c, out=notc);
    
    And(a=nota, b=notb, out=sum00);
    And(a=sum00, b=c, out=sum01);
    And(a=a, b=notb, out=sum10);
    And(a=sum10, b=notc, out=sum11);
    And(a=a, b=b, out=sum20);
    And(a=sum20, b=c, out=sum21);
    And(a=nota, b=b, out=sum30);
    And(a=sum30, b=c, out=sum31);
    Or(a=sum01, b=sum11, out=sums0);
    Or(a=sums0, b=sum21, out=sums1);
    Or(a=sums1, b=sum31, out=sum);
    
}
